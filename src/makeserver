mess.out: error.o wrapunix.o wrapsock.o wraplib.o wrapstdio.o mess.o readline.o writen.o mail_srv.o signal.o wrappthread.o tcp_listen.o 
	cc -o mess.out mail_srv.o error.o wrapunix.o wrapsock.o wraplib.o wrapstdio.o mess.o readline.o writen.o signal.o wrappthread.o tcp_listen.o -lpthread

error.o: error.c acc.h
	cc -c error.c

wrapunix.o: wrapunix.c acc.h
	cc -c wrapunix.c

wrapsock.o: wrapsock.c acc.h
	cc -c wrapsock.c

wraplib.o: wraplib.c acc.h
	cc -c wraplib.c

wrapstdio.o: wrapstdio.c acc.h
	cc -c wrapstdio.c

mess.o: mess.c acc.h
	cc -c mess.c

mail_srv.o: mail_srv.c acc.h
	cc -c mail_srv.c

readline.o: readline.c acc.h
	cc -c readline.c

writen.o: writen.c acc.h
	cc -c writen.c

signal.o: signal.c acc.h
	cc -c signal.c

wrappthread.o: wrappthread.c acc.h
	cc -c wrappthread.c -lpthread

tcp_listen.o: tcp_listen.c acc.h
	cc -c tcp_listen.c

clean:
	rm -rf *.o *~ mess.out